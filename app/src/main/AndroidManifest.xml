<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.famousWomen">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.famousWomen.Activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity
            android:name="com.example.android.famousWomen.Activities.DetailsActivity"
            android:label="@string/category_details"
            android:parentActivityName="com.example.android.famousWomen.Activities.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.famousWomen.Activities.MainActivity" />
        </activity>

        <activity
            android:name="com.example.android.famousWomen.Activities.QuizActivity"
            android:label="@string/category_quiz"
            android:parentActivityName="com.example.android.famousWomen.Activities.MainActivity"/>

        <activity android:name="com.example.android.famousWomen.Activities.AboutApplication"
            android:label= "About Application"
            android:parentActivityName="com.example.android.famousWomen.Activities.MainActivity"/>

    </application>

</manifest>